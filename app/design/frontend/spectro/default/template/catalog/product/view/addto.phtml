<?php $_product = $this->getProduct(); ?>
<?php $_wishlistSubmitUrl = $this->helper('wishlist')->getAddUrl($_product); ?>

<?php $_show_wishlist = Mage::getStoreConfig('tab1/productpage_options/show_wishlist'); ?>
<?php $_show_compare = Mage::getStoreConfig('tab1/productpage_options/show_compare'); ?>
<?php $_enable_ajax = Mage::getStoreConfig('ajax/general/enable'); ?>

<ul class="add-to-links">
	<?php if($_enable_ajax) { ?>
		
		<?php if($_show_wishlist): ?>
			<?php if ($this->helper('wishlist')->isAllow()) : ?>
			    <li class="list-wishlist"><a href="#" onclick='ajaxWishlist("<?php echo $_wishlistSubmitUrl ?>","<?php echo $_product->getId()?>");return false;' class="icon-wishlist"><i class="fa fa-heart"></i></a>
			    <a href="#"  onclick='ajaxWishlist("<?php echo $_wishlistSubmitUrl ?>","<?php echo $_product->getId()?>");return false;' class="link-wishlist"><?php echo $this->__('Add to Wishlist') ?></a>
			    </li>    

			<?php endif; ?>
		<?php endif; ?>

		<?php $_compareUrl = $this->helper('catalog/product_compare')->getAddUrl($_product); ?>

		<?php if($_show_compare): ?>
			<?php if($_compareUrl) : ?>
			    <li class="list-compare"><a href="#" onclick='ajaxCompare("<?php echo $_compareUrl ?>","<?php echo $_product->getId()?>");return false;'   class="icon-compare"><i class="fa fa-random"></i></a>
			    <a href="#" onclick='ajaxCompare("<?php echo $_compareUrl ?>","<?php echo $_product->getId()?>");return false;' class="link-compare"><?php echo $this->__('Add to Compare') ?></a>
			    </li>
			<?php endif; ?>
		<?php endif; ?>

	<?php } else { ?>
		
		<?php if($_show_wishlist): ?>
			<?php if ($this->helper('wishlist')->isAllow()) : ?>
			    <li class="list-wishlist">
				    <a href="<?php echo $_wishlistSubmitUrl ?>" class="icon-wishlist"><i class="fa fa-heart"></i></a>
				    <a href="<?php echo $_wishlistSubmitUrl ?>"  class="link-wishlist"><?php echo $this->__('Add to Wishlist') ?></a>
			    </li>  
			<?php endif; ?>
		<?php endif; ?>

		<?php $_compareUrl = $this->helper('catalog/product_compare')->getAddUrl($_product); ?>

		<?php if($_show_compare): ?>
			<?php if($_compareUrl) : ?>
			    <li class="list-compare">
			    	<a href="<?php echo $_compareUrl ?>" class="icon-compare"><i class="fa fa-random"></i></a>
			    	<a href="<?php echo $_compareUrl ?>" class="link-compare"><?php echo $this->__('Add to Compare') ?></a>
			    </li>
			<?php endif; ?>
		<?php endif; ?>

	<?php } ?> 
</ul>


