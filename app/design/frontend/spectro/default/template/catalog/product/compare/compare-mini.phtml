                    </div>
                </div>
            <?php endforeach; ?>             
        </div>
        <script type="text/javascript">decorateList('compare-items')</script>
        <div class="compare-btn">
                <a title="<?php echo $this->__('Compare') ?>" onclick="popWin('<?php echo $_helper->getListUrl() ?>','compare','top:0,left:0,width=820,height=600,resizable=yes,scrollbars=yes')"><i class="fa fa-random"></i></a>
