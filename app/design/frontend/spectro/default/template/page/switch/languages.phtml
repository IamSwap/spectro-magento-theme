<?php
/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */
?>

<?php if(count($this->getStores())>1): ?>
<button type="button" class="overlay-close">Close</button>
<div class="form-language" >
	
    <label for="select-language"><?php echo $this->__('Your Language') ?></label>    
   	
		    <?php foreach ($this->getStores() as $_lang): ?>
		        <?php if($_lang->getId() == $this->getCurrentStoreId()):?>
					<span title="<?php echo $this->escapeHtml($_lang->getName()) ?>"><?php echo $this->escapeHtml($_lang->getName()) ?></span>
		        <?php else:?>        
					<a href="<?php echo $_lang->getCurrentUrl() ?>" title="<?php echo $this->escapeHtml($_lang->getName()) ?>"><?php echo $this->escapeHtml($_lang->getName()) ?></a>
		    	<?php endif; ?>
		    <?php endforeach; ?>

</div>
<?php endif; ?>
